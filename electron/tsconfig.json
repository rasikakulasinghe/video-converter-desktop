{
  "compilerOptions": {
    "outDir": "../dist-electron",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmitOnError": false,
    "types": ["node"],
    "allowJs": true
  },
  "include": [
    "**/*.ts"
  ]
}